<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExportSuccess"
    android:background="@color/bgColor">

    <ImageView
        android:id="@+id/CheckView"
        android:layout_marginTop="@dimen/MarginTopOfLogoInSplashScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/check_success"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:textAlignment="center"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/ThankforBuying"
        android:layout_below="@id/CheckView"
        android:layout_centerHorizontal="true"
        android:textColor="@color/ThankFororderingcolor"
        android:textSize="@dimen/ThankForOrderingTextSize"
        android:textStyle="bold"
        android:fontFamily="@font/jenniferfont"
        android:layout_marginTop="10dp"/>

</RelativeLayout>