<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@color/bgColor">

    <ImageView
        android:id="@+id/LogoinSplashScreen"
        android:layout_marginTop="@dimen/MarginTopOfLogoInSplashScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bibo_logo"
        android:layout_centerHorizontal="true"

        />
    <TextView
        android:textAlignment="center"
        android:layout_width="@dimen/WelcometoBiBoWidth"
        android:layout_height="wrap_content"
        android:text="@string/WelcometoBiBo"
        android:layout_below="@id/LogoinSplashScreen"
        android:layout_centerHorizontal="true"
        android:textColor="@color/WelcomeToBiBoColor"
        android:textSize="@dimen/WelcometoBiBoTextSize"
        android:textStyle="bold"
        android:fontFamily="@font/jenniferfont"/>

</RelativeLayout>